{
    "name": "avvertix/wptesttool",
    "description": "The Command Line Interface for creating the Wordpress unit test environment for your plugin.",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Alessio Vertemati",
            "email": "alessio@avsoft.it"
        }
    ],
    "autoload" : {
        "psr-4": {
			"WpUnitTools\\": "src/"
		}
    },
    
    "autoload-dev" : {
        "classmap": [ "./tests/" ]
    },
    
    "require": {
        "php": ">=5.6.5",
        "seld/jsonlint": "~1.5.0",
        "symfony/console": "~2.8.0",
        "symfony/finder": "~2.8.0",
        "guzzlehttp/guzzle": "^6.2.0"
    },
    
    "require-dev": {
        "kherge/box": "~2.7.4",
        "phpunit/phpunit": "~5.7.0"
    },
    
    "bin": [ "bin/wptesttools.phar" ],
    
    "scripts" : {
        "box" : "\"./vendor/bin/box\" build"
    }

}
